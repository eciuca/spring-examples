<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">

    <bean class="org.springframework.context.support.PropertySourcesPlaceholderConfigurer">
        <property name="locations" value="classpath:greetings.properties" />
        <property name="properties">
            <value>greetings.german=Hallo</value>
        </property>
    </bean>

    <bean id="myGreetingManager" class="com.github.eciuca.workshops.spring.examples.noioc.GreetingManager">
        <constructor-arg index="1" ref="romanianGreetingServiceBean"/>
        <constructor-arg index="0" ref="englishGreetingServiceBean"/>
    </bean>

    <bean id="englishGreetingServiceBean" class="com.github.eciuca.workshops.spring.examples.noioc.GreetingService">
        <constructor-arg value="${greetings.english}" />
    </bean>

    <bean id="romanianGreetingServiceBean" class="com.github.eciuca.workshops.spring.examples.noioc.GreetingService">
        <constructor-arg value="${greetings.german}" />
    </bean>

    <bean id="mybean" class="com.github.eciuca.workshops.spring.examples.beans.MyBean" init-method="defaultIfEmpty" destroy-method="destroy">
        <property name="name" value="" />
    </bean>
</beans>
